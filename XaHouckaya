#include <iostream>

using namespace std;
int count=0;
void funkciya(int diski, int start, int finish, int midle)   
{                                                        
        if (diski!=0)
        {
                funkciya(diski-1, start, sred, finish);
                cout << start << " -> " << sred << endl;
                funkciya(diski-1, sred, finish, start);
        }

}

int main()
{
        int start=1, finish=3, sred=2, diski;
        cout << "Vvedite diski:" << endl;
        cin  >> diski;
        funkciya(diski, start, finish, sred);

        cout << count;
        return 0;
}
