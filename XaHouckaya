#include <iostream>

using namespace std;
int count=0;
void funkciya(int diski, int start, int finish, int midle)   
{                                                        
        if (diski!=0)
        {
                funkciya(diski-1, start, midle, finish);
                cout << start << " -> " << midle << endl;
                funkciya(diski-1, midle, finish, start);
        }

}

int main()
{
        int start=1, finish=3, midle=2, diski;
        cout << "Vvedite diski:" << endl;
        cin  >> diski;
        funkciya(diski, start, finish, midle);

        cout << ::count;
        return 0;
}
